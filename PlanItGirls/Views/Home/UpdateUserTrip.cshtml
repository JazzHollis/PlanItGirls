
@{
    ViewBag.Title = "UpdateUserTrip";
}
@using PlanItGirls.Models
@model PlanItGirls.Models.Trip
<h2>Update your Trip</h2>


<div class="form-control-sm">
    <form action="/Database/SaveUpdateUserTrip" method="post">
        Trip Name: <input type="text" value="@Model.TripID" name="TripID"  class="form-control" />
        <br /><br />
        Start Date: <input type="date" value="@Model.StartDate" name="StartDate"  class="form-control" />
        Current Start Date = @Model.StartDate
        <br /><br />
        End Date: <input type="date" value="@Model.EndDate" name="EndDate"  class="form-control" />
        Current End Date = @Model.EndDate
        <br /><br />
        Start City: <input type="text" value="@Model.StartCity" name="StartCity"  class="form-control" />
        @Html.DropDownList("StartState", new SelectList(Enum.GetValues(typeof(States))), Model.StartState)
        <br /><br />
        End City: <input type="text" value="@Model.EndCity" name="EndCity"  class="form-control" />
        @Html.DropDownList("EndState", new SelectList(Enum.GetValues(typeof(States))), Model.EndState)
        <br /><br />

        Budget:
        <input type="number" value="@Model.Price" name="Price"  class="form-control"/>

        <input type="submit" value="New Trip" class="budget" />
        </form>
    </div>

    <form action="/Database/TripList" method="get">
        <input type="submit" value="See Trips" class="budget"/>
    </form>



