
@{
    ViewBag.Title = "UpdateUserTrip";
}
@using PlanItGirls.Models
@model PlanItGirls.Models.Trip
<h2>Update your Trip</h2>

<form action="/Database/SaveUpdateUserTrip" method="post">
    Trip Name: <input type="text" value="@Model.TripID" name="TripID" />
    <br /><br />
    Start Date: <input type="date" value="@Model.StartDate" name="StartDate" />
    Current Start Date = @Model.StartDate
                <br /><br />
    End Date: <input type="date" value="@Model.EndDate" name="EndDate" />
    Current End Date = @Model.EndDate
    <br /><br />
    Start City: <input type="text" value="@Model.StartCity" name="StartCity" />
    @Html.DropDownList("StartState", new SelectList(Enum.GetValues(typeof(States))), Model.StartState)
    <br /><br />
    End City: <input type="text" value="@Model.EndCity" name="EndCity" />
    @Html.DropDownList("EndState", new SelectList(Enum.GetValues(typeof(States))), Model.EndState)
    <br /><br />
    Budget: <input type="number" value="@Model.Price" name="Price" />
    <input type="submit" value="New Trip" />
</form>

<form action="/Database/TripList" method="get">
    <input type="submit" value="See your trips" />
</form>

