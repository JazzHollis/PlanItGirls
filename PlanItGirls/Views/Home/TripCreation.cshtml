@{
    ViewBag.Title = "TripCreation";
}

@using PlanItGirls.Models

<script src="http://www.datejs.com/build/date.js" type="text/javascript"></script>
<script src="~/Scripts/validation.js" async></script>

<h2>Trip Creation</h2>
<form action="/Database/CreateNewTrip" method="post">

    <div class="form-control-sm">
        <p>Trip Name: <input type="text" name="TripID" class="form-control" required/></p>
        <br /><br />
        @{ 
            DateTime date = DateTime.Now;
            string today = date.ToString("yyyy-MM-dd");
            date = date.AddDays(1);
            string tomorrow = date.ToString("yyyy-MM-dd");
        }
        <p>Start Date: <input type="date" name="StartDate" class="form-control" min="@today" required/></p>
        <p>End Date: <input type="date" name="EndDate" class="form-control" min="@tomorrow" required/></p>
        <br /><br />
        <p>Start City: <input type="text" name="StartCity" class="form-control" required/></p>
        @Html.DropDownList("StartState", new SelectList(Enum.GetValues(typeof(States))),
             "Start State", new { @class = "form-control" })
       
        <br /><br />
        <p>End City: <input type="text" name="EndCity" class="form-control" required/></p>
        @Html.DropDownList("EndState", new SelectList(Enum.GetValues(typeof(States))),
             "End State", new { @class = "form-control" })
        <br /><br />
              <p>Budget: <input type="number" name="Price" class="form-control" required/></p><br />
        <input type="submit" class="budget" value="New Trip" />
    </div>
</form>

 

<script>
    let today = new Date().toISOString().substr(0, 10);
    document.querySelector("#StartDate").value = today;

    let t = new Date();

    t.setDate(t.getDate() + 1);

    document.querySelector("#EndDate").value = t.toISOString().substr(0, 10);

</script>


